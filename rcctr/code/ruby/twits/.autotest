require 'autotest/growl'

#START:MAPPING-2
#START:MAPPING
Autotest.add_hook :initialize do |autotest|
#END:MAPPING
  autotest.remove_exception 'config/'
#START:MAPPING
  autotest.add_mapping %r%^config/.*.rb$% do
    autotest.files_matching(/^config_spec.rb$/)
  end
  false
end
#END:MAPPING
#END:MAPPING-2

=begin
#START:SVN
Autotest.add_hook :green do 
  Kernel.system('svn up')
  false
end
#END:SVN
=end

#START:SVN-2
Autotest.add_hook :initialize do |autotest|
  %w{.git .DS_Store vendor}.each do |exception|
    autotest.add_exception(exception)
  end
  false
end
#END:SVN-2

#START:DEBT
Autotest.add_hook :green do 
  Kernel.system('find . -name "*.rb" | xargs grep -n "# DEBT"')
end
#END:DEBT

Autotest.add_hook :initialize do |autotest|
  # Exclude earlier revisions of the tests
  %w{revisions}.each do |exception|
    autotest.add_exception(exception)
  end
end

